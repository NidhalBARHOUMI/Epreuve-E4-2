<Page x:Class="FrediWpf.TDB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrediWpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TableauDeBord">

	<Grid>
		<StackPanel Orientation="Horizontal" Height="20" VerticalAlignment="Top">
			<Button Content="Mon Profil" Click="Mb" MinWidth="100"/>
			<Button Content="Ajouter une note de frais" Click="AddNF" MinWidth="100" Margin="0,0,0,0"/>
			<Button Content="Consulter mes notes de frais" Click="AllNF" MinWidth="100" Margin="0,0,0,0"/>
			<Button Content="Contact" Click="Contact" MinWidth="100" Margin="0,0,0,0"/>
			
			<!--Ajout de new bouton ici !-->
		</StackPanel>
		<Frame x:Name="Tableau" Margin="0,20,0,0"/>

	</Grid>
</Page>
